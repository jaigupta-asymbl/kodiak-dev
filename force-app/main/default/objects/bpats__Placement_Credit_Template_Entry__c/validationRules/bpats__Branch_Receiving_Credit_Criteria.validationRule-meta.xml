<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>bpats__Branch_Receiving_Credit_Criteria</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
 ISPICKVAL(bpats__Type__c,&apos;Branch&apos;), 
 OR(
  ISBLANK(bpats__ATS_Branch_Receiving_Credit__c),
  NOT(ISBLANK(bpats__User_Receiving_Credit__c))
 )
)</errorConditionFormula>
    <errorMessage>Only Branch Receiving Credit should be populated for Branch type template entry.</errorMessage>
</ValidationRule>
