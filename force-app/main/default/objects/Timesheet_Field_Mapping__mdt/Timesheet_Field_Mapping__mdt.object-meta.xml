<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <label>Timesheet Field Mapping</label>
    <pluralLabel>Timesheet Field Mappings</pluralLabel>
    <visibility>Public</visibility>
    <description>Configuration for mapping CSV/Excel columns to Salesforce fields during timesheet upload</description>
    <fields>
        <fullName>Source_Column_Name__c</fullName>
        <label>Source Column Name</label>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
        <description>Column name in the CSV/Excel file</description>
    </fields>
    <fields>
        <fullName>Target_Field_API_Name__c</fullName>
        <label>Target Field API Name</label>
        <type>Text</type>
        <length>255</length>
        <required>true</required>
        <description>Salesforce field API name to map the column to</description>
    </fields>
    <fields>
        <fullName>Object_Type__c</fullName>
        <label>Object Type</label>
        <type>Picklist</type>
        <required>true</required>
        <valueSet>
            <restricted>true</restricted>
            <valueSetDefinition>
                <sorted>false</sorted>
                <value>
                    <fullName>Timesheet</fullName>
                    <default>false</default>
                    <label>Timesheet</label>
                </value>
                <value>
                    <fullName>Time_Entry</fullName>
                    <default>true</default>
                    <label>Time Entry</label>
                </value>
            </valueSetDefinition>
        </valueSet>
        <description>Target Salesforce object for the mapping</description>
    </fields>
    <fields>
        <fullName>Client_Name__c</fullName>
        <label>Client Name</label>
        <type>Text</type>
        <length>255</length>
        <required>false</required>
        <description>Client-specific mapping (leave blank for global mapping)</description>
    </fields>
    <fields>
        <fullName>Is_Required__c</fullName>
        <label>Is Required</label>
        <type>Checkbox</type>
        <defaultValue>false</defaultValue>
        <description>Whether this field is required for successful upload</description>
    </fields>
</CustomObject>